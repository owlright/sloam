<launch>
    <!-- 发布一个静态TF：map -> base_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_base"
          args="0 0 0 0 0 0 map base_link" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_velodyne"
            args="0 0 0 0 0 0 map velodyne" />
    <node pkg="sloam" type="scanRegistration" name="scanRegistrationNode" output="screen"/>

    <!-- Node to play a rosbag -->
    <!-- <node pkg="rosbag" type="play" name="rosbag_play" args="$(find sloam)/bags/nsh_indoor_outdoor_seq_1.bag" output="screen"/> -->
</launch>